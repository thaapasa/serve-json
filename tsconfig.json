{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "build",
    "sourceMap": true,
    "lib": [
      "dom",
      "es2015",
      "es2016"
    ],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "strict": true,
    "noImplicitReturns": true
  },
  "include": [
    "src/**/*.ts",
    "typings/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}